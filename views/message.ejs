<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="style.css" />
    <title>Document</title>
  </head>
  <body>
    <main>
      <div class="container">
        <% message.forEach(msg => { %>
        <h2><%= msg.username %></h2>
        <p><%= msg.message %></p>
        <p><%= msg.date_added %></p>

        <a href="/message/<%= message.id %>">Details</a>
        <% }) %>
      </div>
    </main>
  </body>
</html>
